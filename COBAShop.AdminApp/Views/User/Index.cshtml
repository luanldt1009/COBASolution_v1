@using COBAShop.ViewModels.Comon
@model PagedResult<COBAShop.ViewModels.System.Users.UserVm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script src="~/bootbox/bootbox.min.js"></script>
    <script src="~/js/query-3.6.0.min.js"></script>
    <script src="~/js/controller/userController.js"></script>

}
<div class="container-fluid">
    <h1 class="mt-4">Danh sách người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href=@Url.Action("Index","Home")>Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách người dùng</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <a class="btn btn-success" href=@Url.Action("Create","User")>Thêm mới</a>
                </div>
                <div class="col-md-6 text-right">
                    <form method="get" asp-action="Index" asp-controller="User">
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="col-md-8">
                                <input class="form-control text-right" type="text" placeholder="nội dung tiềm kiếm" id="txtSearch" name="keyword" value="@ViewBag.Keyword" />
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-search" title="Tìm kiếm"></i></button>
                                <a class="btn btn-secondary" href=@Url.Action("Index","User")><i class="fas fa-sync-alt" title="Làm mới"></i></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead>
                        <tr>
                            <th>
                                Họ
                            </th>
                            <th>
                                Tên
                            </th>
                            <th>
                                Số điện thoại
                            </th>
                            <th>
                                Tài khoản
                            </th>
                            <th>
                                Email
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>

                                <td width="170px">
                                    <a class="btn btn-link" href=@Url.Action("Edit","User" ,new {id=item.Id })><i class="fa fa-edit"></i></a>|
                                    <a class="btn btn-link" href=@Url.Action("Details","User" ,new {id=item.Id })> <i class="fa fa-eye"></i></a>|
                                    <a class="btn btn-link" id="btnDelete" data-id="@item.Id"> <i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>